<%- include ('partials/header.ejs'); -%>
    <div class="table-wrapper">
        <% if (alta.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">ID de Herramienta</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Hora</th>
                        <th scope="col">Trabajador</th>
                    </tr>
                </thead>
                <tbody>
                    <% alta.forEach((altas, index) => { %>
                        <tr>
                            <th scope="row"><%= altas.id %></th>
                            <td><%= altas.id_herramienta %></td>
                            <td><%= altas.cantidad %></td>
                            <td><%= altas.hora %></td>
                            <td><%= altas.trabajador %></td>
                            <td>
                                <a href="/edit/<%= altas.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= altas.id %>" class="btn btn-sm btn-danger">Baja</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No hay altas de herramienta. Click <a href="/add" >aquÃ­</a> para agregar altas</p>
        <% } %>
    </div>
</div>
</body>
</html>